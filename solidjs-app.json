{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "SolidJs App TSConfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "types": [
      "solid-js",
      "vite/client",
      "vitest/globals",
      "node"
    ],
  },
}